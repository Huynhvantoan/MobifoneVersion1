<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <Button
                android:id="@+id/btn_cmnd_mattruoc"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="CMND MẶT TRƯỚC"/>
            <Button
                android:id="@+id/btn_cmnd_matsau"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="CMND MẶT SAU"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/img_cmnd_mattruoc"
                style="@style/style_img_upanh"/>
            <ImageView
                android:id="@+id/img_cmnd_matsau"
                style="@style/style_img_upanh"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_hd_mattruoc"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="HỢP ĐỒNG TRẢ SAU MẶT TRƯỚC"/>
            <Button
                android:id="@+id/btn_hd_matsau"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="HỢP ĐỒNG TRẢ SAU MẶT SAU"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/img_hd_mattruoc"
                style="@style/style_img_upanh"/>
            <ImageView
                android:id="@+id/img_hd_matsau"
                style="@style/style_img_upanh"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_phuluc"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="PHỤ LỤC 4"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/img_phuluc"
                style="@style/style_img_upanh"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>